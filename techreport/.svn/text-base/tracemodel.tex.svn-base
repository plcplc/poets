   \right.\\
   \cdenclause{\begin{array}{l}\catomicp{\vec{e_a}}{k(\vec{x})}{x\\}{e}{e_d\\}{c_1}{c_2}\end{array}}{\!\delta}{\lambda}{\gamma}{t}{\trace}
